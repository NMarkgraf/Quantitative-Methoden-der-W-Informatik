\message{Starting 'beamercolorthemeNPBT-FOM-DLS' ----------------------------}
\mode<presentation>
% ---------------------------------------------------------------------------

% ---------------------------------------------------------------------------
% Set Path to images
% ---------------------------------------------------------------------------
\def\imagepath{images/NPBT-FOM-DLS-}
\updateNPBTimagespaths{}
\updateNPBTimages{}

% ---------------------------------------------------------------------------
% Define Colors
% ---------------------------------------------------------------------------
%
% base colors
%
\definecolor{fomdlsblue}{HTML}{8E000F}
\definecolor{fomdlsgray}{HTML}{717D87}

%
% named colors
%
\definecolor{FOMDLS}{HTML}{033881}
\definecolor{FOMDLSTitelColor}{HTML}{FFFFFF}
\definecolor{FOMDLSBoldColor}{HTML}{99008A} %???
\definecolor{FOMDLSInstituteColor}{HTML}{1496DF}
\definecolor{FOMDLSSubTitelColor}{HTML}{4CB7AD}
\definecolor{FOMDLSFirmColor}{HTML}{262626}
\definecolor{FOMDLSForgroundColor}{HTML}{033881}
\definecolor{FOMDLSBackgroundColor}{HTML}{EFEFEF}
\definecolor{FOMDLSWhiteColor}{HTML}{FFFFFF}
\definecolor{FOMDLSFrametitelColor}{HTML}{FFFFFF}
\definecolor{FOMDLSFrametitelInverseColor}{HTML}{FFFFFF}
\definecolor{FOMDLSAuthorColor}{HTML}{00A7E7} % Schriftfarbe des Lehrendennamens (RGB: 0/167/231)
\definecolor{FOMDLSSubTitelColor}{HTML}{4CB7AD}
\definecolor{FOMDLSSectionHeadlineColor}{HTML}{717D87}
\definecolor{FOMDLSSectionTitelColor}{HTML}{FFFFFF}
\definecolor{FOMDLSSectionNumberColor}{HTML}{FFFFFF}
\definecolor{FOMDLSNearBlack}{HTML}{102030}
\definecolor{FOMDLSNumberInFootline}{HTML}{1395E0}
\definecolor{FOMDLSNumberInFootlineExercise}{HTML}{D56817}
\definecolor{FOMTOCSectionNumberColor}{HTML}{FFFFFF}
\definecolor{FOMTOCSectionTitleColor}{HTML}{FFFFFF}
\definecolor{FOMTOCBackgroundColor}{HTML}{00A7E7} % Die KÃ¤sten auf Folie 2 der Beispielfolien sollen die Farbe (RGB: 0/167/231) bekomme



% ---------------------------------------------------------------------------
\setbeamercolor*{structure}{fg=fomdlsblue, bg=softred}
\setbeamercolor{structure}{fg=FOMDLSForgroundColor, bg=FOMDLSBackgroundColor}
\setbeamercolor{background canvas}{bg=FOMDLSBackgroundColor}


% ---------------------------------------------------------------------------
% Colors & Fonts setting for: titlepage
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{title in titlepage}{fg=FOMDLSTitelColor}
\setbeamercolor{institute in titlepage}{fg=FOMDLSInstituteColor}
\setbeamercolor{author in titlepage}{fg=FOMDLSAuthorColor}
\setbeamercolor{subtitle in titlepage}{fg=FOMDLSSubTitelColor}
\setbeamercolor{firm in titlepage}{fg=FOMDLSFirmColor}
%
% fonts
%
\setbeamerfont{institute in titlepage}{size=\large, family=\sffamily, series=\bfseries}
\setbeamerfont{firm in titlepage}{size=\large, family=\sffamily, series=\bfseries}
\setbeamerfont{title in titlepage}{size=\huge, family=\sffamily, series=\bfseries}
\setbeamerfont{subtitle in titlepage}{size=\huge, family=\sffamily, series=\bfseries}
\setbeamerfont{author in titlepage}{size=\LARGE, family=\sffamily, series=\bfseries}

% ---------------------------------------------------------------------------
% Colors & Fonts setting for: part page
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{part title}{fg=FOMDLSTitelColor}
%
% fonts
%

% ---------------------------------------------------------------------------
% Colors & Font setting for: section page
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{section name}{fg=FOMDLSTitelColor} % **FIX ME** Needed?
\setbeamercolor{section title}{fg=FOMDLSSectionTitelColor}
\setbeamercolor{sectionnumber title}{fg=FOMDLSSectionNumberColor}
%
% fonts
%
\setbeamerfont{section name}{size=\huge, family=\sffamily, series=\bfseries}
\setbeamerfont{section title}{size=\huge, family=\sffamily, series=\bfseries}
\setbeamerfont{sectionnumber title}{size=\Huge, family=\sffamily, series=\bfseries}


% ---------------------------------------------------------------------------
% Colors & Font setting for: subsection title page
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{subsection name}{fg=FOMDLSTitelColor}
\setbeamercolor{subsection title}{fg=FOMDLSSectionTitelColor}
\setbeamercolor{subsectionnumber title}{fg=FOMDLSSectionNumberColor}

%
% fonts
%
\setbeamerfont{subsection name}{size=\huge, family=\sffamily, series=\bfseries}
\setbeamerfont{subsection title}{size=\huge, family=\sffamily, series=\bfseries}
\setbeamerfont{subsectionnumber title}{size=\Huge, family=\sffamily, series=\bfseries}

% ---------------------------------------------------------------------------
% Colors & Font setting for: header
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{subsection in head}{parent=myheader}
\setbeamercolor{section in head}{fg=FOMDLSSectionHeadlineColor}
\setbeamercolor{subsection in head}{fg=FOMDLSSectionHeadlineColor}
\setbeamercolor{frametitle in head}{bg=FOMDLSWhiteColor, fg=FOMDLSFrametitelColor}
\setbeamercolor{frametitle in head exercise}{bg=FOMDLSFrametitelColor, fg=FOMDLSFrametitelInverseColor}
%
% fonts
%
\setbeamerfont{frametitle in head}{size=\Large, family=\sffamily, series=\bfseries}
\setbeamerfont{section in head}{size=\large, family=\sffamily, series=\mdseries}
\setbeamerfont{section in head exercise}{parent=section in head}
\setbeamercolor{myheader}{fg=darkgray}

% ---------------------------------------------------------------------------
% Colors & Font setting for: footline
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{footline}{fg=fomdlsgray, bg=white}
\setbeamercolor{author in footline}{parent=footline}
\setbeamercolor{date in footline}{parent=footline}
\setbeamercolor{seperator in footline}{parent=footline}
\setbeamercolor{title in footline}{parent=footline}
\setbeamercolor{number in footline}{fg = FOMDLSNumberInFootline}
%
% fonts
%
\setbeamerfont{footline}{size=\scriptsize, family=\sffamily, series=\mdseries}
\setbeamerfont{author in footline}{parent=footline}
\setbeamerfont{date in footline}{parent=footline}
\setbeamerfont{separator in footline}{parent=footline}
\setbeamerfont{title in footline}{parent=footline}
\setbeamerfont{number in footline}{parent=footline}

% ---------------------------------------------------------------------------
% Colors & Font setting for: footline exercise
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{number in footline exercise}{fg = FOMDLSNumberInFootlineExercise}
%
% fonts
%
\setbeamerfont{number in footline exercise}{parent=footline}

% ---------------------------------------------------------------------------
% Colors & Font setting for: note page
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{note}{fg=FOMDLSNearBlack, bg=FOMDLS!10}
\setbeamercolor{note page}{fg=FOMDLSNearBlack, bg=FOMDLS!3}
\setbeamercolor{note date}{fg=FOMDLS!10}
\setbeamercolor{note title}{fg=FOMDLSNearBlack, bg=FOMDLS!10}
%
% fonts
%
\setbeamerfont{note}{family=\sffamily, series=\mdseries}
\setbeamerfont{note date}{family=\ttfamily, series=\mdseries}
\setbeamerfont{note title}{parent=note}

% ---------------------------------------------------------------------------
% Colors & Font setting for: cemph and cstrong
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{color emph}{fg=FOMDLSBoldColor!75}
\setbeamercolor{color strong}{fg=FOMDLSBoldColor}
%
% fonts
%
\setbeamerfont{color emph}{series=\bfseries}
\setbeamerfont{color strong}{series=\bfseries}

\renewcommand*{\cemph}{\usebeamerfont{color emph}\usebeamercolor[fg]{color emph}}
\renewcommand*{\cstrong}{\usebeamerfont{color strong}\usebeamercolor[fg]{color strong}}

% ---------------------------------------------------------------------------
\mode<all>
\message{Ending 'beamercolorthemeNPBT-FOM-DLS' ------------------------------}
